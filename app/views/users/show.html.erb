<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <table class="table table-striped">
        <tr><th class="bg-success">出身地</th><td class="bg-success"><%= @user.area %></td></tr>
        <tr><th class="bg-info">生年月日</th><td class="bg-info"><%= @user.birthday %></td></tr>
      </table>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>