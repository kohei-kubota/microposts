<li id="user-<%= user.id %>">
  <%= link_to gravatar_for(user, size: 50), user %>
  <span class="user"><%= link_to user.name, user %></span>
  <table class="table table-striped">
    <tr><th class="bg-success">出身地</th><td class="bg-success"><%= user.area %></td></tr>
    <tr><th class="bg-info">生年月日</th><td class="bg-info"><%= user.birthday %></td></tr>
  </table>
</li>